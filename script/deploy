#!/bin/sh

## eval `ssh-agent`
## ssh-add $1
ssh-add -L
ssh $1 -t -t << EOF
	test -d nodeRepo && rm -rf nodeRepo
	git clone https://github.com/NourritureGroup1/superphung.git nodeRepo
	cd nodeRepo
	npm install --production
	bower install
	eval 'forever list | grep app.js && forever restart app.js' || forever start app.js
	exit
EOF
